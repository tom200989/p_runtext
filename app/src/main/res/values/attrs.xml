<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RootMaMarText">

        <!-- 1.文本颜色 -->
        <attr name="marTextcolor" format="color" />

        <!-- 2.文本大小比例(相对屏幕) -->
        <attr name="marTextSizeRate" format="float" />

        <!-- 3.文本背景色 -->
        <attr name="marBackground" format="color" />

        <!-- 4.滚动方向 -->
        <attr name="marDirection" format="integer">
            <!-- 向左 -->
            <enum name="R_TO_L" value="0" />
            <!-- 向右 -->
            <enum name="L_TO_R" value="1" />
        </attr>

        <!-- 5.文本内容 -->
        <attr name="marText" format="string" />

        <!-- 6.速度等级 -->
        <attr name="marSpeedLevel" format="integer">
            <enum name="so_slow" value="100" />
            <enum name="slow" value="80" />
            <enum name="standard" value="60" />
            <enum name="fast" value="40" />
            <enum name="so_fast" value="25" />
        </attr>

        <!-- 7.需要适配的语言(如阿拉伯语需要从右到左) -->
        <attr name="marReverseLanguage" format="string" />

        <!-- 8.对齐 -->
        <attr name="marGravity" format="integer">
            <enum name="Start" value="0" />
            <enum name="Center" value="1" />
            <enum name="End" value="2" />
        </attr>

        <!-- 9.测试间隔 -->
        <attr name="test_duration" format="integer" />

        <!-- 10.步长 -->
        <attr name="marStep" format="integer" />

    </declare-styleable>

</resources>
